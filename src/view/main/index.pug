extends ./../layout/main

block content 
  h1 hello, #{user.name}. Wellcome to Express.js + PassportJS + PUG
  div(class="col-xs-12 col-md-12")
    if (user)
      a(href="/auth/logout") Logout
  div(class="col-xs-12 col-md-12")
    if (user)
      h2 You are logged in
    else 
      h2 Please login